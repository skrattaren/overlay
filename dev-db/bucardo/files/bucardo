# $Header: $

opts="${opts} reload"

start() {
    ebegin "Starting bucardo"
    /usr/bin/bucardo_ctl start "Starting Bucardo via init-script"
    eend $?
}

stop() {
    ebegin "Stopping bucardo"
    /usr/bin/bucardo_ctl stop "Stopping Bucardo via init-script..."
    eend $?
}

restart() {
    stop
    start
}

reload() {
    ebegin "Attempting to gracefully restart Bucardo..."
    /usr/bin/bucardo_ctl start "Attempting to gracefully restart Bucardo..."
	eend $?
}
